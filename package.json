{
  "name": "nextdns-skills",
  "version": "1.0.0",
  "description": "Comprehensive AI agent skills for NextDNS management, covering API integration, CLI operations, and Web UI configuration best practices.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tuanductran/nextdns-skills.git"
  },
  "homepage": "https://github.com/tuanductran/nextdns-skills#readme",
  "bugs": {
    "url": "https://github.com/tuanductran/nextdns-skills/issues"
  },
  "author": "Tuan Duc Tran <tuanductran.dev@gmail.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "nextdns",
    "dns",
    "security",
    "privacy",
    "parental-control",
    "ddns",
    "denylist",
    "allowlist",
    "analytics",
    "logs",
    "configuration",
    "threat-modeling",
    "setup-optimization",
    "troubleshooting",
    "api",
    "cli",
    "ui",
    "agent-skills",
    "ai-agent"
  ],
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "pnpm run format:check && pnpm run \"/^lint:(md|rules|syntax)$/\"",
    "lint:all": "pnpm run lint && pnpm run lint:links",
    "lint:fix": "pnpm run format && pnpm run \"/^lint:(md|rules):fix$/\" && pnpm run lint:rules && pnpm run lint:syntax",
    "lint:links": "find . -name \"*.md\" -not -path \"*/node_modules/*\" | xargs markdown-link-check -c config.json",
    "lint:md": "markdownlint --ignore-path=.gitignore .",
    "lint:md:fix": "markdownlint --ignore-path=.gitignore . --fix",
    "lint:rules": "node scripts/validate_rules.mjs",
    "lint:syntax": "eslint \"**/*.md\"",
    "update-counts": "node scripts/update_counts.mjs"
  },
  "devDependencies": {
    "@eslint/markdown": "^7.5.1",
    "case-police": "^2.1.1",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-case-police": "^2.1.1",
    "eslint-plugin-prettier": "^5.5.5",
    "markdown-link-check": "^3.14.2",
    "markdownlint-cli": "^0.47.0",
    "prettier": "^3.8.1",
    "prettier-plugin-pkg": "^0.21.2"
  },
  "pnpm": {
    "patchedDependencies": {
      "eslint-plugin-case-police@2.1.1": "patches/eslint-plugin-case-police@2.1.1.patch"
    }
  }
}
